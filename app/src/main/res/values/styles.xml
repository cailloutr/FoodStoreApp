<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuItem.FoodStoreApp.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeLabel.FoodStoreApp.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/border_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_between_elements</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="SeeMore.FoodStoreApp.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/border_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">@color/orange_500</item>
    </style>

    <style name="Widget.FoodStoreApp.ButtonCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="Widget.FoodStoreApp.SmallButtonCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>